# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/your_database" --- IGNORE ---"

# JWT Authentication
JWT_SECRET="your-super-secure-jwt-secret-key-here-change-this-in-production"
NEXTAUTH_SECRET="your-secret-key-here" # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# File Upload Configuration
MAX_FILE_SIZE="104857600"  # 100MB in bytes
UPLOAD_DIR="./uploads"

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="604800000"  # 7 days in milliseconds

# Email Configuration (for notifications and invitations)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@yourdomain.com"

# Google OAuth (for Google Drive, Gmail integration)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth (for Outlook, SharePoint, Teams integration)
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# Dropbox Integration
DROPBOX_CLIENT_ID="your-dropbox-client-id"
DROPBOX_CLIENT_SECRET="your-dropbox-client-secret"

# Slack Integration
SLACK_CLIENT_ID="your-slack-client-id"
SLACK_CLIENT_SECRET="your-slack-client-secret"

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID="your-whatsapp-phone-number-id"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token"

# AI/ML Configuration (for semantic search and document processing)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Vector Database (for semantic search)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_INDEX="documents-organizer"
PINECONE_ENVIRONMENT="us-west1-gcp"

# Redis (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# Storage Configuration
# For production, use cloud storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Azure Blob Storage (alternative)
AZURE_STORAGE_ACCOUNT="your-storage-account"
AZURE_STORAGE_KEY="your-storage-key"
AZURE_CONTAINER="documents"

# Google Cloud Storage (alternative)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_STORAGE_BUCKET="your-gcs-bucket"

# Feature Flags
ENABLE_SEMANTIC_SEARCH="true"
ENABLE_AI_CATEGORIZATION="true"
ENABLE_OCR="true"
ENABLE_THUMBNAILS="true"
ENABLE_VIDEO_PROCESSING="false"
ENABLE_AUDIO_TRANSCRIPTION="false"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_UPLOAD_PER_HOUR="50"
RATE_LIMIT_SEARCH_PER_MINUTE="50"

# Organization Limits
MAX_ORGANIZATION_MEMBERS="100"
MAX_ORGANIZATION_STORAGE="10737418240"  # 10GB
MAX_INDIVIDUAL_STORAGE="1073741824"     # 1GB

# WebSocket Configuration
WS_PORT="8080"
WS_HEARTBEAT_INTERVAL="30000"

# Development Only
ENABLE_DEBUG_LOGS="true"
SKIP_EMAIL_VERIFICATION="true"